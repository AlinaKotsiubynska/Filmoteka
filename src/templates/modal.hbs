<div class="modal-container">
    <button type="button" class="modal-btn-close">
        <svg class="modal-icon" width="12" height="12">
            <use href="./images/icons/sprite.svg#icon-close"></use>
        </svg>
    </button>
    <div class="modal-image-wrapper">
        <picture class="gallery-card-picture">
            <source srcset="{{#if poster_path}}https://image.tmdb.org/t/p/w500{{poster_path}}{{/if}}" type="image/jpg">
            <img class="gallery-card-img" src="https://i.pinimg.com/564x/f7/f7/73/f7f7733f9e3409f0ef433f3074525790.jpg"
                alt="обложка фильма">
        </picture>
    </div>
    <div class="left-side-modal">
        <div class="modal-description">
            <h2 class="modal-description-title">{{title}}</h2>
            <ul class="modal-description-list">
                <li class="modal-description-item">
                    <p class="modal-description-categories">Vote / Votes</p>
                    <p class="modal-description-value"><span class="modal-span">{{vote_average}}</span> /
                        {{vote_count}}</p>
                </li>
                <li class="modal-description-item">
                    <p class="modal-description-categories">Popularity</p>
                    <p class="modal-description-value">{{popularity}}</p>
                </li>
                <li class="modal-description-item">
                    <p class="modal-description-categories">Original Title</p>
                    <p class="modal-description-value">{{original_title}}</p>
                <li class="modal-description-item">
                    <p class="modal-description-categories">Genre</p>
                    <p class="modal-description-value">{{#each genres}}{{name}} {{/each}}</p>
                </li>
            </ul>
            <span class="modal-description-about">About</span>
            <p class="modal-description-text">{{overview}}</p>
        </div>
        <div class="modal-button-container">
            <button class="modal-button btn-add-watch" type="button">add to Watched</button>
            <button class="modal-button btn-add-queue" type="button">add to queue</button>
        </div>
    </div>
</div>